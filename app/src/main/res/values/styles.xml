<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mustard</item>
        <item name="colorPrimaryDark">@color/mustard</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:gravity">center_horizontal</item>50dp
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="small_text_style_bold" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="small_text_style" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="medium_text_style_bold" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="medium_text_style" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>
    <style name="large_text_style_bold" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_style" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>
    <style name="basket_product_style" >
        <item name="android:background">@drawable/customborder</item>
        <item name="android:paddingLeft">@dimen/padding_10</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FF4081</item>
    </style>

    <dimen name="medium_text_size">16dp</dimen>
    <dimen name="small_text_size">14dp</dimen>
</resources>
