<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBlue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text_style"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"

                            android:text="Sitara Baji Code"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="5"
                        android:id="@+id/tvSitarabajiCode"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text_style"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:text="Sitara Baji Name"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="5"
                        android:id="@+id/tvSitarabajiName"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/darkGreen"
                        android:gravity="center_vertical"
                        android:layout_weight="5"
                        android:text="Region"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:id="@+id/tvRegion"
                        android:text="">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black" android:backgroundTint="@color/darkGreen"
                        android:gravity="center_vertical"
                        android:layout_weight="5"
                        android:text="District"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:id="@+id/tvDistrict"
                        android:text="">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:weightSum="10">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text_style"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"

                            android:text="Visit Date"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text_style"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:layout_weight="5"
                            android:text="دورے کی تاریخ"/>
                    </LinearLayout>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/text_style"
                        android:textStyle="bold"
                        android:textColor="@color/darkGreen"
                        android:layout_weight="5"
                        android:focusable="false"
                        android:id="@+id/etVisitDate"/>
                </TableRow>
            </TableLayout>
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spClient"
                android:prompt="@string/SelectParent"
                android:layout_width="match_parent"
                style="@style/spinner_style"
                android:layout_weight="10"
                android:layout_height="@dimen/spinner_height"
                android:autofillHints="@string/SelectClient"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llQuestionBank"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                >



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_header_size"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/medium_text_style"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Remarks تبصرہ"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customborder"
                android:padding="@dimen/padding_10"
                android:layout_marginTop="5dp"
                style="@style/text_style"
                android:id="@+id/etPersonalMinutes"
                android:maxLength="250"
                android:hint="Remarks"
                android:text="">
            </EditText>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:background="@drawable/customborder"
                android:id="@+id/btnSubmit"
                style="@style/text_style"
                android:layout_marginTop="5dp"
                android:text="@string/submit"/>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>