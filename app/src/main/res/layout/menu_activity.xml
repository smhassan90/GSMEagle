<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGreen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"

            android:id="@+id/llFirst">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llProviderProfile">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgDashboard"

                        android:src="@drawable/dashboard"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/providerProfile"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llDashboard">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/dashboard"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/orange"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llForm">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgForm"
                        android:src="@drawable/form"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CRForm"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llInitialScreening">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgApprovalStatus"
                        android:src="@drawable/oncology"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/InitialScreening"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/orange"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llNeighbourForm">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/neighbor"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/NeighbourForm"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llFollowupForm">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/follows_up"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/FollowupForm"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/orange"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llTokenForm">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/token"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TokenForm"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/llPartialSynchronization">
                <LinearLayout
                    android:layout_width="200dp"
                    android:background="@drawable/custom_button"
                    android:padding="@dimen/padding_10"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgPS"
                        android:src="@drawable/img_sync"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PartialSynchronization"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/padding_10"
                        style="@style/medium_text_style"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>